@model NorthwindApp.FrontEnd.Mvc.ViewModels.Blogging.BlogArticleInputViewModel

@{
    ViewBag.Title = "Add article";
}

<h2>Create new article</h2>
<div class="row">
    <div class="col-md-6">
        <form method="post" asp-controller="Blogging" asp-action="AddArticle" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title"></label>
                <input class="form-control" asp-for="Title" />
                <span asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label asp-for="Text"></label>
                <textarea class="form-control" asp-for="Text"></textarea>
                <span asp-validation-for="Text"></span>
            </div>
            <input class="btn btn-primary" type="submit" value="Create" />
        </form>
    </div>
</div>
