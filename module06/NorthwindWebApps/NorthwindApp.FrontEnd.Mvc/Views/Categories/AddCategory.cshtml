@model NorthwindApp.FrontEnd.Mvc.ViewModels.Categories.CategoryInputViewModel

@{
    ViewBag.Title = "Add New Category";
}

<h2>Create new category</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post" asp-controller="Categories" asp-action="AddCategory" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input class="form-control" asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image"></label>
                <div class="custom-file">
                    <label class="custom-file-label" value="Choose file..."></label>
                    <input asp-for="Image" class="custom-file-input" multiple />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea class="form-control" asp-for="Description"></textarea>
                <span asp-validation-for="Description"></span>
            </div>
            <input class="btn btn-primary" type="submit" value="Create" />
        </form>
    </div>
</div>

@section Scripts
{
    <script>
    $(document).ready(function (){
        $(".custom-file-input").on("change", function (){
            var fileLabel = $(this).prev(".custom-file-label");
            var files = $(this)[0].files;
            if (files.length == 1){
                fileLabel.html(files[0].name);
            }
        });
    });
    </script>
}