@model NorthwindApp.FrontEnd.Mvc.ViewModels.Products.ProductInputViewModel

@{
    ViewBag.Title = $"Update {Model?.Name}";
}

<h2>Update productModel</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post" asp-controller="Products" asp-action="UpdateProduct" asp-route-productId="@ViewBag.productId" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input class="form-control" asp-for="Name" value="@Model.Name"/>
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantityPerUnit"></label>
                <input class="form-control" asp-for="QuantityPerUnit" value="@(Model.QuantityPerUnit ?? "")"/>
                <span asp-validation-for="QuantityPerUnit"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitPrice"></label>
                <div class="input-group">
                    <input class="form-control" asp-for="UnitPrice" value="@Model.UnitPrice" />
                    <div class="input-group-append">
                        <span class="input-group-text">$</span>
                    </div>
                </div>
                <span asp-validation-for="UnitPrice"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitsInStock"></label>
                <input class="form-control" asp-for="UnitsInStock" value="@Model.UnitsInStock"/>
                <span asp-validation-for="UnitsInStock"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductStatus"></label>
                <select class="form-control" asp-for="ProductStatus" asp-items="@ViewBag.productStatus">
                    <option selected="selected" disabled="disabled">@Model.ProductStatus</option>
                </select>
                <span asp-validation-for="ProductStatus"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryName"></label>
                <select class="form-control" asp-for="CategoryName" asp-items="@ViewBag.categoryNames">
                    <option selected="selected" disabled="disabled">@(Model.CategoryName ?? "No category")</option>
                </select>
                <span asp-validation-for="CategoryName"></span>
            </div>
            <input class="btn btn-primary" type="submit" value="Save" />
        </form>
    </div>
</div>
