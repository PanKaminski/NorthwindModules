@model NorthwindApp.FrontEnd.Mvc.ViewModels.Products.ProductInputViewModel

@{
    ViewBag.Title = $"Add Product";
}

<h2>Create new productModel</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post" asp-controller="Products" asp-action="AddProduct" asp-route-productModelId="@ViewBag.productId" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input class="form-control" asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantityPerUnit"></label>
                <input class="form-control" asp-for="QuantityPerUnit" />
                <span asp-validation-for="QuantityPerUnit"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitPrice"></label>
                <div class="input-group">
                    <input class="form-control" asp-for="UnitPrice" value="0"/>
                    <div class="input-group-append">
                        <span class="input-group-text">$</span>
                    </div>
                </div>
                <span asp-validation-for="UnitPrice"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitsInStock"></label>
                <input class="form-control" asp-for="UnitsInStock" />
                <span asp-validation-for="UnitsInStock"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductStatus"></label>
                <select class="form-control" asp-for="ProductStatus" asp-items="@ViewBag.productStatus">
                    <option selected="selected" disabled="disabled">In production</option>
                </select>
                <span asp-validation-for="ProductStatus"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryName"></label>
                <select class="form-control" asp-for="CategoryName" asp-items="@ViewBag.categoryNames">
                    <option selected="selected" disabled="disabled">No category</option>
                </select>
                <span asp-validation-for="CategoryName"></span>
            </div>
            <input class="btn btn-primary" type="submit" value="Create" />
        </form>
    </div>
</div>
